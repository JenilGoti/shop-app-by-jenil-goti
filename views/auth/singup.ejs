<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="login-form" action="/singup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input class="<%= errorMessageEmail.msg?'invalid':'' %>" type="email" name="email" id="email"
                    value="<%= oldInput.email%>">
                <% if(errorMessageEmail){%>
                <div class="user-message user-message-error"> <%=errorMessageEmail.msg %></div>
                <%}%>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errorMessagePassword.msg?'invalid':'' %>" type="password" name="password" id="password"
                value="<%= oldInput.password%>">
            </div>
            <div class="form-control">
                <label for="confirm_password">Conform Password</label>
                <input class="<%= errorMessagePassword.msg?'invalid':'' %>" type="password" name="confirmPassword"
                    id="confirm_password" value="<%= oldInput.confirmPassword%>">
                <% if(errorMessagePassword){%>
                <div class="user-message user-message-error"> <%=errorMessagePassword.msg %></div>
                <%}%>
            </div>
            <input type="hidden" name ="_csrf" value="<%= csrfToken  %>" />
                <button class="btn" type="submit">Singup</button>
        </form>
    </main>

    <%- include('../includes/end.ejs') %>